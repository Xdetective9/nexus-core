{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run migrate"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "10000"
      }
    }
  },
  "services": [
    {
      "name": "nexuscore",
      "serviceType": "application",
      "source": {
        "type": "image",
        "image": "node:20-alpine"
      },
      "env": {
        "NODE_ENV": "production",
        "PORT": "10000"
      },
      "volumes": [
        {
          "mountPath": "/app/uploads",
          "sizeGB": 1
        },
        {
          "mountPath": "/app/logs",
          "sizeGB": 1
        }
      ],
      "deployment": {
        "minInstances": 1,
        "maxInstances": 3,
        "targetCPU": 70,
        "targetMemory": 70
      }
    }
  ],
  "plugins": [
    {
      "name": "postgresql",
      "type": "database",
      "version": "15"
    }
  ]
}
